<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AdministrareBlocMVC</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AdministrareBlocMVC.styles.css" asp-append-version="true" />

    <style>
        html, body {
            height: 100%;
        }

        body {
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            text-rendering: optimizeLegibility;
        }

            body.bg-nelogat {
                background: url("/images/poza_nelogat.jpg") no-repeat center center fixed;
                background-size: cover;
            }

            body.bg-logat {
                background: url("/images/poza_logat.jpg") no-repeat center center fixed;
                background-size: cover;
            }

        .page-overlay {
            min-height: 100vh;
            padding-top: 70px;
            /* overlay colorat, nu alb "mort" */
            background: linear-gradient( to bottom, rgba(255, 255, 255, 0.75), rgba(200, 230, 255, 0.65) );
        }


        .navbar-glass {
            background: rgba(0, 0, 0, 0.70);
            /* IMPORTANT: scoatem blur-ul */
            backdrop-filter: none;
            -webkit-backdrop-filter: none;
            border-bottom: 1px solid rgba(255, 255, 255, 0.18);
        }

            .navbar-glass .nav-link,
            .navbar-glass .navbar-brand {
                color: #fff !important;
                /* mic shadow => text mult mai lizibil */
                text-shadow: 0 1px 2px rgba(0,0,0,0.65);
            }

                .navbar-glass .nav-link:hover {
                    text-decoration: underline;
                }

            /* optional: face butonul toggler mai clar pe fundal */
            .navbar-glass .navbar-toggler {
                border-color: rgba(255,255,255,0.35);
            }
    </style>
</head>

<body class="@(User?.Identity?.IsAuthenticated == true ? "bg-logat" : "bg-nelogat")">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark navbar-glass">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Bloc Admin</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Bloc" asp-action="Index">Blocuri</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Apartament" asp-action="Index">Apartamente</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Utilizatori" asp-action="Index">Utilizatori</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Intretinere" asp-action="Index">Intretinere</a>
                            </li>
                            
                        }

                        @if (User.IsInRole("Locatar"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="AnunturiLocatar" asp-action="Index">Anunturi</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="ContLocatar" asp-action="ApartamentulMeu">Apartamentul meu</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="IntretinereLocatar" asp-action="Index">Intretinerea mea</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="IntretinereLocatar" asp-action="Statistica">Statistica</a>
                            </li>
                        }
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="page-overlay">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
