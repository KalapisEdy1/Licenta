@model List<AdministrareBlocMVC.Models.Intretinere>

@{
    var ap = ViewBag.Apartament as AdministrareBlocMVC.Models.Apartament;
    var ani = ViewBag.AniDisponibili as List<int>;
    int? anSelectat = ViewBag.AnSelectat as int?;

    var scaraTxt = (ap != null && !string.IsNullOrWhiteSpace(ap.Scara)) ? $" - Scara {ap.Scara}" : "";

    ViewData["Title"] = "Istoric intretinere apartament";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="mb-0">
            Istoric intretinere - Ap @ap?.Numar
        </h1>
        <p class="text-muted mb-0">
            @ap?.Bloc?.Nume@scaraTxt (@ap?.Bloc?.Adresa) — Etaj @ap?.Etaj
        </p>
    </div>

    <a asp-action="ListaPeBloc"
       asp-route-id="@ap?.BlocId"
       class="btn btn-secondary">
        Inapoi la bloc
    </a>
</div>

<form method="get" class="row g-2 mb-3">
    <input type="hidden" name="apartamentId" value="@ap?.Id" />

    <div class="col-auto">
        <select name="an" class="form-select">
            <option value="">Toti anii</option>
            @if (ani != null)
            {
                foreach (var a in ani)
                {
                    <option value="@a" selected="@(anSelectat == a)">
                        @a
                    </option>
                }
            }
        </select>
    </div>

    <div class="col-auto">
        <button type="submit" class="btn btn-primary">
            Filtreaza
        </button>
    </div>
</form>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Luna</th>
            <th>An</th>
            <th>Data generare</th>
            <th>Total</th>
            <th style="width: 140px;">Actiuni</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="5" class="text-center text-muted">
                    Nu exista intretineri pentru acest filtru
                </td>
            </tr>
        }
        else
        {
            foreach (var i in Model)
            {
                <tr>
                    <td>@i.Luna.ToString("D2")</td>
                    <td>@i.An</td>
                    <td>@i.DataGenerare.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@i.Total RON</td>
                    <td>
                        <a class="btn btn-sm btn-outline-primary"
                           asp-action="Detalii"
                           asp-route-id="@i.Id">
                            Detalii
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
