@model AdministrareBlocMVC.Models.Bloc

@{
    ViewData["Title"] = "Creaza bloc";
}

<h1>Creaza bloc</h1>

<hr />

@if (ViewBag.Errors != null)
{
    <div class="alert alert-danger">
        @ViewBag.Errors
    </div>
}

<div class="row">
    <div class="col-md-5">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Nume" class="control-label"></label>
                <input asp-for="Nume" class="form-control" />
                <span asp-validation-for="Nume" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Adresa" class="control-label"></label>
                <input asp-for="Adresa" class="form-control" />
                <span asp-validation-for="Adresa" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Scari" class="control-label"></label>
                <input asp-for="Scari"
                       class="form-control"
                       placeholder="Ex: A,B,C (sau lasa gol daca nu exista scari)" />
                <span asp-validation-for="Scari" class="text-danger"></span>

                <div class="form-text">
                    Separi scarile prin virgulă. Exemplu: <b>A,B,C</b>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Creaza</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Inapoi la lista</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
