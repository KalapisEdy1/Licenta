@model AdministrareBlocMVC.Models.Apartament

@{
    ViewData["Title"] = "Sterge";
}

<h1>Sterge</h1>

<h3>Esti sigur ca vrei sa stergi acest apartament?</h3>
<div>
    <h4>Apartament</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Numar)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Numar)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Etaj)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Etaj)
        </dd>

        <dt class="col-sm-2">
            Scara
        </dt>
        <dd class="col-sm-10">
            @(string.IsNullOrWhiteSpace(Model.Scara) ? "-" : Model.Scara)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bloc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bloc.Nume)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Șterge" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary ms-2">Inapoi la blocuri</a>
    </form>
</div>
