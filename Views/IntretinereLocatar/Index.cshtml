@model IEnumerable<AdministrareBlocMVC.Models.Intretinere>

@{
    ViewData["Title"] = "Intretinerea mea";
    var ap = ViewBag.Apartament as AdministrareBlocMVC.Models.Apartament;
    var scara = string.IsNullOrWhiteSpace(ap?.Scara) ? null : ap.Scara.Trim();

    int? anSelectat = null;
    var anRaw = Context.Request.Query["an"].ToString();
    if (!string.IsNullOrWhiteSpace(anRaw) && int.TryParse(anRaw, out var anTmp))
        anSelectat = anTmp;

    var aniDisponibili = Model
        .Select(x => x.An)
        .Distinct()
        .OrderByDescending(x => x)
        .ToList();

    var listaAfisata = anSelectat.HasValue
        ? Model.Where(x => x.An == anSelectat.Value)
        : Model;
}

<div class="d-flex gap-2 mb-3">
    <a class="btn btn-success"
       asp-action="Export">
        Export Cheltuieli / An
    </a>

    <a class="btn btn-outline-primary"
       asp-action="Publicari">
        Publicări lunare întreținere
    </a>
</div>

<h1>Intretinerea mea</h1>

@if (ViewBag.Mesaj != null)
{
    <div class="alert alert-warning">@ViewBag.Mesaj</div>
}
else
{
    <div class="mb-2 text-muted">
        Bloc:
        <b>
            @ap?.Bloc?.Nume
            @if (scara != null)
            {
                <span> - Scara @scara</span>
            }
        </b>
        (@ap?.Bloc?.Adresa)
        <br />

        Apartament: <b>@ap?.Numar</b>, Etaj <b>@ap?.Etaj</b>
    </div>

    @if (aniDisponibili != null && aniDisponibili.Count > 0)
    {
        <form method="get" class="row g-2 mb-3">
            <div class="col-auto">
                <select name="an" class="form-select">
                    <option value="">Toti anii</option>
                    @foreach (var a in aniDisponibili)
                    {
                        <option value="@a" selected="@(anSelectat == a)">@a</option>
                    }
                </select>
            </div>

            <div class="col-auto">
                <button type="submit" class="btn btn-primary">
                    Filtreaza
                </button>
            </div>
        </form>
    }

    @if (!listaAfisata.Any())
    {
        <div class="alert alert-info">Nu exista intretineri pentru acest filtru.</div>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Luna/An</th>
                    <th>Data generare</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in listaAfisata)
                {
                    <tr>
                        <td>@($"{i.Luna:D2}/{i.An}")</td>
                        <td>@i.DataGenerare.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@i.Total RON</td>
                        <td>
                            <a class="btn btn-sm btn-primary"
                               asp-action="Detalii"
                               asp-route-id="@i.Id">
                                Vezi detalii
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
